block variables

doctype html
html
	head
		meta(charset="utf-8")
		base(href="/")
		title #{title}
		meta(content="Sergey Glushakov" name="author")
		meta(content="Персональный сайт верстальщика - все о вёрстке и для вёрстки доступным и простым языком" name="description")
		meta(content="" name="keywords")
		meta(content="width=device-width, initial-scale=1" name="viewport")
		meta(content="ie=edge" http-equiv="x-ua-compatible")

		//- favicon block start
		meta(property="og:image" content="path/to/image.jpg")
		link(href="img/favicon/favicon.ico", rel="icon")
		link(rel="apple-touch-icon", href="img/favicon/apple-touch-icon-180x180.png")
		//- favicon block end

		link(rel='stylesheet' href='/assets/css/foundation.css')
		link(rel='stylesheet' href='/assets/css/app.css')
		script(src='/assets/js/foundation.js' defer)
		script(src='/assets/js/app.js' defer)

		<!--[if lt IE 9]>
		script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
		<![endif]-->

	body
		block content
